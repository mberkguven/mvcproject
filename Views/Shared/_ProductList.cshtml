@model IEnumerable<Abc.MvcWebUI.Models.ProductModel>



<div class="row">


    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="product-image">
                    <img class="card-img-top img-fluid product-image" src="~/Upload/@urun.Image" alt="@urun.Name">
                </div>
                <div class="card-body">
                    <h5 class="card-title"><a href="/Home/Details/@urun.Id">@urun.Name</a></h5>
                    <p class="card-text pt-2 description">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">@urun.Price <i class="fas fa-lira-sign"></i></small>
                    <a class="btn btn-primary btn-sm float-right" href="/Home/Details/@urun.Id">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        Ürünü İncele
                    </a>

                </div>
            </div>
        </div>
    }
</div>