@model IEnumerable<Abc.MvcWebUI.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">
    <h2>Kategori Listesi</h2>
    <hr />


    <p>
        @Html.ActionLink("Yeni Kategori", "Create",null,new {@class="btn btn-dark"})
    </p>
   
    <table class="table table-striped table-bordered">
        <tr>
            <th scope="row" width="5%">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="row" width="50%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="row" width="30%">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th scope="row" width="15%">Ayarlar</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Id)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description) 
                </td>
                <td>
                    <a href="/Category/Edit/@item.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i>
                        Düzenle
                    </a>
                    <a href="/Category/Delete/@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>
                        Sil
                    </a>
                </td>
            </tr>
        }

    </table>

</div>