@model IEnumerable<Abc.MvcWebUI.Models.AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">

    <h2>Sipariş Listesi</h2>
    <hr />

    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Id
            </th>
            <th>
                Sipariş Numarası
            </th>
            <th>
                Sipariş Tarihi
            </th>
            <th>
                Ürün Adet
            </th>
            <th>
                Sipariş Durumu
            </th>
            <th>
                Toplam
            </th>
            <th width="120px" class="text-center">Ayarlar</th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.OrderNumber
            </td>
            <td>
                @item.OrderDate.ToShortDateString()
            </td>
            <td>
                @item.Count
            </td>
            <td class="text-center">
                @if (item.OrderState == Abc.MvcWebUI.Entity.EnumOrderState.Completed)
                {
                    <label class="label label-success">
                        <i class="fas fa-check" style="color:green;"></i> Tamamlandı
                    </label>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.OrderState)
                }
            </td>
            <td class="text-center">
                @item.Total TL
            </td>
            <td>
                <a href="/Order/Details/@item.Id" class="btn btn-primary btn-sm">
                    <i class="fas fa-info-circle"></i>
                    Detay
                </a>
            </td>
        </tr>
        }

    </table>
</div>